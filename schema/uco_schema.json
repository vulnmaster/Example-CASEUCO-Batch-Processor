{
    "$id": "https://unifiedcyberontology.org/schemas/uco-file.json",
    "$schema": "http://json-schema.org/draft/2020-12/schema#",
    "title": "UCO File Schema",
    "description": "Schema for UCO File",
    "type": "object",
    "properties": {
        "@context": {
            "type": "object"
        },
        "@graph": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "@id",
                            "@type"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "@id": {
                                "type": "string"
                            },
                            "@type": {
                                "type": "string",
                                "const": "uco-observable:File"
                            },
                            "uco-core:hasFacet": {
                                "type": "array",
                                "items": {
                                    "anyOf": [
                                        { "$ref": "#/$defs/uco-file-facet" },
                                        { "$ref": "#/$defs/uco-content-data-facet" }
                                    ]
                                }
                            }
                        }
                    }
                ]
            }
        }
    },
    "required": [
        "@context",
        "@graph"
    ],
    "additionalProperties": false,
    "$defs": {
        "uco-content-data-facet": {
            "type": "object",
            "required": [
                "@id",
                "@type"
            ],
            "additionalProperties": false,
            "properties": {
                "@id": {
                    "type": "string"
                },
                "@type": {
                    "type": "string",
                    "const": "uco-observable:ContentDataFacet"
                },
                "sizeInBytes": {
                    "type": "integer",
                    "minimum": 0
                },
                "uco-observable:hash": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/uco-hash"
                    }
                }
            }
        },
        "uco-file-facet": {
            "type": "object",
            "required": [
                "@id",
                "@type"
            ],
            "additionalProperties": false,
            "properties": {
                "@id": {
                    "type": "string"
                },
                "@type": {
                    "type": "string",
                    "const": "uco-observable:FileFacet"
                },
                "fileName": {
                    "type": "string"
                },
                "filePath": {
                    "type": "string"
                },
                "observableCreatedTime": {
                    "type": "object",
                    "required": [
                        "@type",
                        "@value"
                    ],
                    "properties": {
                        "@type": {
                            "type": "string",
                            "const": "xsd:dateTime"
                        },
                        "@value": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "uco-hash": {
            "type": "object",
            "required": [
                "@id",
                "@type"
            ],
            "properties": {
                "@id": {
                    "type": "string"
                },
                "@type": {
                    "type": "string",
                    "const": "uco-types:Hash"
                },
                "uco-types:hashMethod": {
                    "type": "object",
                    "properties": {
                        "@type": {
                            "type": "string",
                            "const": "uco-vocabulary:HashNameVocab"
                        },
                        "@value": {
                            "type": "string"
                        }
                    },
                    "uco-types:hashValue": {
                        "type": "object",
                        "properties": {
                            "@type": {
                                "type": "string",
                                "const": "xsd:hexBinary"
                            },
                            "@value": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}